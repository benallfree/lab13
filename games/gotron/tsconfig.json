{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"]
}
